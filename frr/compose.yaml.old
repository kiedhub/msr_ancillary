---
version: "3"
services:
  ospf10:
    image: rsattler/frrouter:latest   # should be version 8.4.1
    container_name: ospf10
    sysctls:
      - net.ipv6.conf.all.disable_ipv6=0
      - net.ipv6.conf.all.forwarding=1
    networks:
      msr_ospf10:
        ipv4_address: 192.10.10.10
        ipv6_address: fd00::192:10:10:10
      ospf10_ospf30:
        ipv4_address: 11.0.10.10
        ipv6_address: fd00::11:0:10:10
    volumes:
      - ./customize/ospf10/frr:/etc/frr:rw
      - ./customize/ospf10/init-functions:/lib/lsb/init-functions
      - ./customize/ospf10/config:/tmp/config:ro
    restart: unless-stopped
    cap_add:
      - NET_ADMIN
      - CAP_SYS_ADMIN
  ospf20:
    image: rsattler/frrouter:latest   # should be version 8.4.1
    container_name: ospf20
    sysctls:
      - net.ipv6.conf.all.disable_ipv6=0
      - net.ipv6.conf.all.forwarding=1
    networks:
      msr_ospf20:
        ipv4_address: 192.20.20.20
        ipv6_address: fd00::192:20:20:20
      ospf20_ospf30:
        ipv4_address: 11.0.20.20
        ipv6_address: fd00::11:0:20:20
    volumes:
      - ./customize/ospf20/frr:/etc/frr/:rw
      - ./customize/ospf20/init-functions:/lib/lsb/init-functions
      - ./customize/ospf20/config:/tmp/config:ro
    restart: unless-stopped
    cap_add:
      - NET_ADMIN
      - CAP_SYS_ADMIN
  ospf30:
    image: rsattler/frrouter:latest   # should be version 8.4.1
    container_name: ospf30
    sysctls:
      - net.ipv6.conf.all.disable_ipv6=0
      - net.ipv6.conf.all.forwarding=1
    networks:
      ospf10_ospf30:
        ipv4_address: 11.0.10.30
        ipv6_address: fd00::11:0:10:30
      ospf20_ospf30:
        ipv4_address: 11.0.20.30
        ipv6_address: fd00::11:0:20:30
      ospf30_dn:
        ipv4_address: 13.20.0.30
        ipv6_address: fd00::13:20:0:30
    volumes:
      - ./customize/ospf30/frr/:/etc/frr/:rw
      - ./customize/ospf30/init-functions:/lib/lsb/init-functions
      - ./customize/ospf30/config:/tmp/config:ro
        #- ./customize/ospf30/frr.conf:/etc/frr/frr.conf
    restart: unless-stopped
    cap_add:
      - NET_ADMIN
      - CAP_SYS_ADMIN
  dn:
    image: rsattler/frrouter:latest   # should be version 8.4.1
    container_name: dn
    sysctls:
      - net.ipv6.conf.all.disable_ipv6=0
    networks:
      ospf30_dn:
        ipv4_address: 13.20.0.111
        ipv6_address: fd00::11:20:0:111
    volumes:
      - ./customize/dn/init-functions:/lib/lsb/init-functions
      - ./customize/dn/config:/tmp/config:ro
    cap_add:
      - NET_ADMIN
      - CAP_SYS_ADMIN


networks:
  msr_ospf10:
    driver: bridge
    driver_opts:
      com.docker.network.enable_ipv6: "true"
      com.docker.network.bridge.name: "msr-ospf10"
    ipam:
      driver: default
      config:
        - subnet: 192.10.10.0/24
        - subnet: fd00::192:10:10:0/112
  msr_ospf20:
    driver: bridge
    driver_opts:
      com.docker.network.enable_ipv6: "true"
      com.docker.network.bridge.name: "msr-ospf20"
    ipam:
      driver: default
      config:
        - subnet: 192.20.20.0/24
        - subnet: fd00::192:20:20:0/112
  ospf10_ospf30:
    driver: bridge
    driver_opts:
      com.docker.network.enable_ipv6: "true"
      com.docker.network.bridge.name: "ospf10_ospf30"
    ipam:
      driver: default
      config:
        - subnet: 11.0.10.0/24
        - subnet: fd00::11:0:10:0/112
  ospf20_ospf30:
    driver: bridge
    driver_opts:
      com.docker.network.enable_ipv6: "true"
      com.docker.network.bridge.name: "ospf20_ospf30"
    ipam:
      driver: default
      config:
        - subnet: 11.0.20.0/24
        - subnet: fd00::11:0:20:0/112
  ospf30_dn:
    driver: bridge
    driver_opts:
      com.docker.network.enable_ipv6: "true"
      com.docker.network.bridge.name: "ospf30_dn"
    ipam:
      driver: default
      config:
        - subnet: 13.20.0.0/24
        - subnet: fd00::13:20:0:0/112
